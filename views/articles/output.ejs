.bluebg {
  position: absolute;
  display: flex;
  justify-content: center;
  top:40px;
  width:100%;
  height:420px;
  background: rgba(255,255,255,0.2);
  /*box-shadow: 0 5px 45px rgba(0,0,0,0.2);*/
  border-radius: 10px;
  box-shadow:10px 10px 20px #bebebe, -10px -10px 20px #ffffff;
}

.bluebg .box {
  position: relative;
  display: flex;
  height: 100%;
  width: 50%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.formBx{
  box-shadow: 10px 10px 20px #bebebe, -10px -10px 20px #ffffff;
  border-radius: 10px;
  transition: 0.5s ease-in-out;
  overflow:hidden;
}

.formBx.active {
  left: 50%;
}

.formBx .form {
  position: absolute;
  left: 0px;
  width: 100%;
  overflow:hidden;
  transition: 0.5s;
  padding-left:30%;
}

.formBx .signinform{
  transition-delay: 0.25s;
}

.formBx.active .signinform{
  left:-100%;
  transition-delay: 0s;
}

.formBx .signupform{
  left:100%;
  transition-delay: 0s;
}

.formBx.active .signupform{
  left:0;
  transition-delay:0.25s;
}

@keyframe shake{
  25%{
    transform: translateX(4px);
  }

  50%{
    transform: translateX(-4px);
  }

  75%{
    transform: translateX(4px);
  }
}

